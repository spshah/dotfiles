function! Synmake()
  " Get the VIEWROOT environment variable
  let l:viewroot = $VIEWROOT

  " Determine project type based on path
  if l:viewroot =~ 'dgplt'
    let l:build_cmd = 'fcmake exec'
  elseif l:viewroot =~ 'spf'
    let l:build_cmd = 'dcmake exec'
  else
    echo "Unknown project type. Path must contain 'dgplt' or 'spf'."
    return
  endif

  let l:cmd = 'cd ' . l:viewroot . ' && nohup ' . l:build_cmd . ' > /tmp/build.log 2>&1 & echo $! > /tmp/build.pid'
  " Run the command in the background
  call system(l:cmd)

  echo "Build started in background."
endfunction

function! CheckBuildStatus()
  " Read PID from file
  if filereadable('/tmp/build.pid')
    let l:pid = readfile('/tmp/build.pid')[0]
    let l:check_cmd = 'ps -p ' . l:pid . ' > /dev/null && echo running || echo finished'
    let l:status = system(l:check_cmd)

    if l:status =~ 'running'
      echo "Build is still running..."
    else
      echo "Build has finished."
    endif
  else
    echo "No build PID found. Has the build started?"
  endif
endfunction

" Optional: Map to a key for convenience
nnoremap <leader>b :call Synmake()<CR>
nnoremap <leader>bs :call CheckBuildStatus()<CR>


