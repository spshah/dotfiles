function! HiInterestingWord(n)
    normal! mz
    normal! "zyiw
    let mid = 77750 + a:n
    try
        call matchdelete(mid)
    catch 'E803'
        let pat = '\V\<' . escape(@z, '\') . '\>'
        call matchadd("InterestingWord" . a:n, pat, 1, mid)
        endtry
    normal! `z
endfunction


"clear all highlighting
function! ClearAllHi()
    for i in range(1,9)
        let mid = 77750 + i
        silent! call matchdelete(mid)
    endfor
endfunction


